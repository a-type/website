---
import { ColorModeToggle } from '@a-type/ui';
import { SITE_TITLE } from '../config';
import { Links } from './Links';
---

<header>
  <div class="header-main">
    <a href="/"
      ><h2>
        {SITE_TITLE}
      </h2>
    </a>
    <ColorModeToggle client:load />
  </div>
  <Links />
</header>
<style>
  header {
    margin: 0em 0 2em;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .header-main {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: space-between;
    align-items: center;
  }
  h2 {
    margin: 0.5em 0;
    font-family: 'Cormorant', serif;
    font-weight: 100;
    font-style: italic;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
</style>
