---
import ExternalLink from './ExternalLink.astro';

const { image, href } = Astro.props;
---

<li class="root">
  <ExternalLink href={href}>
    <div class="aspect"></div>
    <img src={image} />
    <div class="overlay">
      <slot />
    </div>
  </ExternalLink>
</li>
<style>
  .root {
    position: relative;
    display: block;
    border-radius: 0.5rem;
    overflow: hidden;
    border: 1px solid #eaeaea;
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    transform-origin: 50% 50%;
  }
  .root:hover {
    transform: perspective(200px) scale(1.05) rotateX(-5deg) translateY(-0.5rem);
    box-shadow: 0 10px 10px rgba(26, 33, 69, 0.257);
  }
  .aspect {
    display: block;
    width: 100%;
    padding-bottom: 100%;
  }
  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    color: white;
    font-weight: bold;
    padding: 1rem;
    background: linear-gradient(
      0deg,
      rgba(47, 57, 62, 0.584) 0%,
      rgba(0, 0, 0, 0) 100%
    );
    text-shadow: rgba(0, 0, 0, 0.5) 0px 0px 10px;
  }
</style>
